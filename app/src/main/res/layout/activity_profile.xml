<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_generation_girl" />

    <Button
        android:id="@+id/buttonWebsite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#5C6BC0"
        android:text="Website"
        app:icon="@drawable/ic_computer"
        app:layout_constraintBottom_toTopOf="@id/buttonSearch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewProfile" />

    <Button
        android:id="@+id/buttonEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#EC407A"
        android:text="Email"
        app:icon="@drawable/ic_email"
        app:layout_constraintBottom_toTopOf="@+id/buttonYoutube"
        app:layout_constraintEnd_toEndOf="@+id/buttonWebsite"
        app:layout_constraintStart_toStartOf="@+id/buttonWebsite"
        app:layout_constraintTop_toBottomOf="@id/buttonSearch" />

    <Button
        android:id="@+id/buttonYoutube"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#26A69A"
        android:text="Youtube"
        app:icon="@drawable/ic_video_library"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buttonWebsite"
        app:layout_constraintStart_toStartOf="@+id/buttonWebsite"
        app:layout_constraintTop_toBottomOf="@id/buttonEmail" />

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        app:icon="@drawable/ic_search"
        app:layout_constraintBottom_toTopOf="@id/buttonEmail"
        app:layout_constraintEnd_toEndOf="@+id/buttonWebsite"
        app:layout_constraintStart_toStartOf="@+id/buttonWebsite"
        app:layout_constraintTop_toBottomOf="@id/buttonWebsite" />
</androidx.constraintlayout.widget.ConstraintLayout>